
{% macro colonne(colonne) %}
    <div class="row-colonne  my-3 py-2" style="border-bottom:3px solid #000">
        {#{{ dump(redaction.children.path.vars.data) }}#}
        <div class="row">
            <div class="form-group col-md-6">
               <label class="sr-onl" for="userinput1">Choisissez un motif*</label>
            {{ form_row(colonne.element,{'attr':{'class':'form-control element'}}) }}
            </div>
            <div class="form-group col-md-6">{{ form_row(colonne.nomEnfant,{'attr':{'class':'form-control enfant','placeholder':"Precisez le nom de l'enfant",}}) }}</div>
        </div>
        <div class="row ">
            <div class="form-group col-md-12">{{ form_row(colonne.precisez,{'attr':{'class':'form-control precisez','placeholder':"Donnez un justification",}}) }}</div>
        </div>
        <div class="row">
            <div class="col-md-1 del-col" data-parent=".row-colonne"></div>
        </div>
    </div>

{% endmacro  %}


{% macro prototype_ligne_colonne(form) %}
    <div class="list-colonne"  data-prototype="{{ _self.colonne(form.motifs.vars.prototype)|e }}"></div>
    <button type="button" data-protoname="__name__" class="btn btn-default add_line btn-xs" id="add_ligne"  data-protoclass=".list-colonne" data-container=".column-container">
        <i class="fa fa-plus"></i> Ajouter un motif
    </button>
    <div class="column-container proto-container" data-childclass="">
        {% for item in form.motifs %}
            {{ _self.colonne(item|e) }}
        {% endfor %}
    </div>
{% endmacro %}