                 <div class="form-group col-md-1 ">
                     <a class="btn btn-secondary btn-xs" target="_blank" title="Télécharger le document" href="#" download> <i class="fe fe-upload"></i>
                         <i class="fa fa-upload"></i></a>
                     #}{#  <button type="button" class="btn btn-dark">Upload</button>#}{#
                 </div>#}
        {% endif %}
                            
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 del-col" data-parent=".row-colonne"></div>
        </div>
    </div>

{% endmacro  %}


{% macro prototype_ligne_colonne(form) %}
    <div class="list-colonne"  data-prototype="{{ _self.colonne(form.motifs.vars.prototype)|e }}"></div>
    <div class="column-container proto-container" data-childclass="">
        {% for item in form.motifs %}
            {{ _self.colonne(item|e) }}
        {% endfor %}
    </div>
{% endmacro %}